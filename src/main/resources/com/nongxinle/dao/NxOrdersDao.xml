<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nongxinle.dao.NxOrdersDao">



	<select id="queryTotal" resultType="int">
		select count(*) from nx_orders where nx_orders_user_id = #{nxOrdersUserId}
	</select>

	<resultMap id="commGoods" type="NxCommunityGoodsEntity">
		<id property="nxCommunityGoodsId" column="nx_community_goods_id"/>
		<result property="nxCgGoodsPrice" column="nx_cg_goods_price"/>
		<result property="nxCgGoodsPriceDecimal" column="nx_cg_goods_price_decimal"/>
		<result property="nxCgGoodsIsWeight" column="nx_cg_goods_is_weight"/>
		<result property="nxCgGoodsStatus" column="nx_cg_goods_status"/>
		<result property="nxCgPurchaseQuantity" column="nx_cg_purchase_quantity"/>
		<result property="nxCgBuyStatus" column="nx_cg_buy_status"/>
		<result property="nxCgGoodsTotalHits" column="nx_cg_goods_total_hits"/>
		<result property="nxCgGoodsSellType" column="nx_cg_goods_sell_type"/>
		<result property="nxCgGoodsName" column="nx_cg_goods_name"/>
		<result property="nxCgGoodsStandardname" column="nx_cg_goods_standardname"/>

	</resultMap>
	<!-- subOrders -->
	<resultMap id="subOrders" type="NxOrdersSubEntity">
		<id property="nxOrdersSubId" column="nx_orders_sub_id"/>
		<result property="nxOsGoodsFatherId" column="nx_OS_goods_id"/>
		<result property="nxOsQuantity" column="nx_OS_quantity"/>
		<result property="nxOsStandard" column="nx_OS_standard"/>
		<result property="nxOsPrice" column="nx_OS_price"/>
		<result property="nxOsWeight" column="nx_OS_weight"/>
		<result property="nxOsOrdersId" column="nx_OS_orders_id"/>
		<result property="nxOsSubtotal" column="nx_OS_subtotal"/>
		<result property="nxOsSubWeight" column="nx_OS_sub_weight"/>
		<!--<association property="nxGoodsEntity" javaType="NxGoodsEntity">-->
			<!--<id property="nxGoodsId" column="nx_goods_id"/>-->
			<!--<result property="nxGoodsName" column="nx_goods_name"/>-->
			<!--<result property="nxGoodsStandardname" column="nx_goods_standardname"/>-->
			<!--<result property="nxGoodsDetail" column="nx_goods_detail"/>-->
		<!--</association>-->
		<association property="nxCommunityGoodsEntity" resultMap="commGoods"/>

	</resultMap>

	<!-- orders -->
	<resultMap id="orders" type="NxOrdersEntity">
		<id property="nxOrdersId" column="nx_orders_id"/>
		<result property="nxOrdersService" column="nx_orders_service"/>
		<result property="nxOrdersAmount" column="nx_orders_amount"/>
		<result property="nxOrdersServiceDate" column="nx_orders_service_date"/>
		<result property="nxOrdersServiceTime" column="nx_orders_service_time"/>
		<result property="nxOrdersWeighUserId" column="nx_orders_weigh_user_id"/>
		<result property="nxOrdersSubAmount" column="nx_orders_sub_amount"/>
		<result property="nxOrdersSubFinished" column="nx_orders_sub_finished"/>
		<result property="nxOrdersPaymentStatus" column="nx_orders_payment_status"/>
		<result property="nxOrdersAmount" column="nx_orders_amount"/>
		<result property="nxOrdersUserId" column="nx_orders_id"/>
		<result property="nxOrdersDate" column="nx_orders_date"/>
		<result property="nxOrdersPaymentStatus" column="nx_orders_payment_status"/>
		<result property="nxOrdersPaymentSendTime" column="nx_orders_payment_send_time"/>
		<result property="nxOrdersPaymentTime" column="nx_orders_payment_time"/>
		<result property="nxOrdersUserId" column="nx_orders_user_id"/>
		<result property="nxOrdersDeliveryUserId" column="nx_orders_delivery_user_id"/>
		<association property="nxCustomerEntity" resultMap="nxCustomerEntity" />

	</resultMap>

    <resultMap id="nxCustomerEntity" type="NxCustomerEntity">
        <id property="nxCustomerId" column="nx_customer_id"/>
        <result property="nxCustomerName" column="nx_customer_name"/>
        <result property="nxCustomerAddress" column="nx_customer_address"/>
        <result property="nxCustomerPhone" column="nx_customer_phone"/>
        <association property="nxCustomerUserEntity" resultMap="nxCustomerUserEntity"/>
        <association property="nxCommunityEntity" resultMap="nxCommunityEntity"/>
    </resultMap>

    <resultMap id="nxCustomerUserEntity" type="NxCustomerUserEntity">
        <id property="nxCuCustomerId" column="CU_customer_id"/>
        <result property="nxCuWxAvatarUrl" column="CU_wx_avatar_url"/>
        <result property="nxCuWxGender" column="CU_wx_gender"/>
        <result property="nxCuWxNickName" column="CU_wx_nick_name"/>
        <result property="nxCuWxPhoneNumber" column="CU_wx_phone_number"/>
    </resultMap>

    <resultMap id="nxCommunityEntity" type="nxCommunityEntity">
        <id property="nxCommunityId" column="nx_community_id"/>
        <result property="nxCommunityName" column="nx_community_name"/>
        <result property="nxCommunityRouteId" column="nx_community_route_id"/>
    </resultMap>

	<!--ordersInformation -->
	<resultMap id="ordersInformation" type="NxOrdersEntity">
		<id property="nxOrdersId" column="nx_orders_id"/>
		<result property="nxOrdersService" column="nx_orders_service"/>
		<result property="nxOrdersAmount" column="nx_orders_amount"/>
		<result property="nxOrdersServiceDate" column="nx_orders_service_date"/>
		<result property="nxOrdersServiceTime" column="nx_orders_service_time"/>
		<result property="nxOrdersWeighUserId" column="nx_orders_weigh_user_id"/>
		<result property="nxOrdersSubAmount" column="nx_orders_sub_amount"/>
		<result property="nxOrdersSubFinished" column="nx_orders_sub_finished"/>
		<result property="nxOrdersPaymentStatus" column="nx_orders_payment_status"/>
		<result property="nxOrdersAmount" column="nx_orders_amount"/>
		<result property="nxOrdersUserId" column="nx_orders_user_id"/>
		<result property="nxOrdersDate" column="nx_orders_date"/>
		<result property="nxOrdersPaymentStatus" column="nx_orders_payment_status"/>
		<result property="nxOrdersPaymentSendTime" column="nx_orders_payment_send_time"/>
		<result property="nxOrdersPaymentTime" column="nx_orders_payment_time"/>
		<result property="nxOrdersUserId" column="nx_orders_user_id"/>
		<result property="nxOrdersStatus" column="nx_orders_status"/>
		<result property="nxOrdersDeliveryUserId" column="nx_orders_delivery_user_id"/>
		<association property="nxCustomerEntity" resultMap="nxCustomerEntity"/>

 		<collection property="nxOrdersSubEntities" resultMap="subOrders"/>
	</resultMap>


	<select id="queryObject" resultMap="ordersInformation">
		select * from nx_orders  as o
			left join nx_orders_sub as s on s.nx_OS_orders_id = o.nx_orders_id
			left join nx_customer as c on c.nx_customer_id = o.nx_orders_customer_id
			left join nx_community as co on co.nx_community_id = o.nx_orders_community_id
			left join nx_community_goods as dg on dg.nx_community_goods_id = s.nx_OS_community_goods_id
		where nx_orders_id = #{value}

	</select>
	<select id="queryOrders" resultMap="orders">
		select * from nx_orders as o
		left join nx_customer as c on o.nx_orders_customer_id = c.nx_customer_id
		left join nx_customer_user as u on o.nx_orders_user_id = u.nx_Cu_user_id
        where o.nx_orders_community_id = #{communityId} and o.nx_orders_status = #{status}
		<if test="pickerUserId != null">
			and o.nx_orders_weigh_user_id = #{pickerUserId}
		</if>
		order by  o.nx_orders_service, o.nx_orders_service_date, o.nx_orders_service_time

	</select>
	<select id="queryOrdersToWeigh" resultMap="orders">
		select * from nx_orders as o
          left join nx_customer_user as u on o.nx_orders_user_id = u.nx_CU_user_id
          left join nx_customer as c on o.nx_orders_customer_id = c.nx_customer_id
          left join nx_community as mm on mm.nx_community_id = o.nx_orders_community_id
        where o.nx_orders_weigh_user_id = #{pickerUserId} and o.nx_orders_status = #{status}

	</select>

	<select id="queryOrdersInformation" resultMap="ordersInformation">
		select * from nx_orders as o
		left join nx_customer as c on o.nx_orders_customer_id = c.nx_customer_id
		left join nx_customer_user as u on o.nx_orders_user_id = u.nx_CU_user_id
		left join nx_orders_sub as os on o.nx_orders_id = os.nx_OS_orders_id
		left join nx_community as mm on mm.nx_community_id = o.nx_orders_community_id
		left join nx_community_goods as cg on cg.nx_community_goods_id = os.nx_OS_community_goods_id
		where o.nx_orders_distributer_id = #{disId} and o.nx_orders_status = #{status}
		<if test="pickerUserId != null">
			and o.nx_orders_weigh_user_id = #{pickerUserId}
		</if>
		<if test="serviceDate != null">
			and o.nx_orders_service_date = #{serviceDate}
		</if>
		order by  o.nx_orders_service, o.nx_orders_service_date, o.nx_orders_service_time,   os.nx_OS_status, os.nx_orders_sub_id
	</select>

	<select id="queryOrdersPaymentInformation" resultMap="orders">
		select * from nx_orders as o
        left join nx_customer as c on o.nx_orders_customer_id = c.nx_customer_id
        left join nx_customer_user as u on o.nx_orders_user_id = u.nx_CU_user_id
        left join nx_orders_sub as os on o.nx_orders_id = os.nx_OS_orders_id
        left join nx_community as mm on mm.nx_community_id = c.nx_customer_community_id
		  where o.nx_orders_distributer_id = #{disId} and o.nx_orders_status = #{orderStatus}
		<if test="paymentStatus != -1">
			and o.nx_orders_payment_status = #{paymentStatus}
		</if>
    </select>

	<select id="queryCustomerOrder" resultMap="ordersInformation">
		select * from nx_orders as o
			left join nx_orders_sub as s on s.nx_OS_orders_id = o.nx_orders_id
		where o.nx_orders_user_id = #{nxOrdersUserId}
		order by o.nx_orders_date
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>


	</select>

    <select id="queryDeliveryOrders" resultType="com.nongxinle.entity.NxOrdersEntity">
        select * from nx_orders where nx_orders_delivery_user_id = #{deliveryUserId} and nx_orders_status = #{status}
    </select>


    <insert id="save" parameterType="com.nongxinle.entity.NxOrdersEntity"
			useGeneratedKeys="true" keyProperty="nxOrdersId" >
		insert into nx_orders
		(
			`nx_orders_id`, 
			`nx_orders_customer_id`, 
			`nx_orders_user_id`, 
			`nx_orders_distributer_id`, 
			`nx_orders_date`, 
			`nx_orders_status`, 
			`nx_orders_service`,
			`nx_orders_service_date`,
			`nx_orders_service_time`,
			`nx_orders_amount`,
		 	`nx_orders_weigh_user_id`,
			`nx_orders_sub_amount`,
		 	`nx_orders_sub_finished`,
		 	`nx_orders_payment_status`,
		 	`nx_orders_payment_send_time`,
		 	`nx_orders_payment_time`,
		 	`nx_orders_delivery_user_id`,
		    `nx_orders_type`,
		 	`nx_orders_community_id`

		)
		values
		(
			#{nxOrdersId}, 
			#{nxOrdersCustomerId}, 
			#{nxOrdersUserId}, 
			#{nxOrdersDistributerId}, 
			#{nxOrdersDate}, 
			#{nxOrdersStatus}, 
			#{nxOrdersService},
			#{nxOrdersServiceDate},
			#{nxOrdersServiceTime},
			#{nxOrdersAmount},
		 	#{nxOrdersWeighUserId},
		 	#{nxOrdersSubAmount},
		 	#{nxOrdersSubFinished},
		 	#{nxOrdersPaymentStatus},
		 	#{nxOrdersPaymentSendTime},
		 	#{nxOrdersPaymentTime},
		 	#{nxOrdersDeliveryUserId},
		    #{nxOrdersType},
		 	#{nxOrdersCommunityId}
		)
	</insert>
	 
	<update id="update" parameterType="com.nongxinle.entity.NxOrdersEntity">
		update nx_orders 
		<set>
			<if test="nxOrdersCustomerId != null">`nx_orders_customer_id` = #{nxOrdersCustomerId}, </if>
			<if test="nxOrdersUserId != null">`nx_orders_user_id` = #{nxOrdersUserId}, </if>
			<if test="nxOrdersDistributerId != null">`nx_orders_distributer_id` = #{nxOrdersDistributerId}, </if>
			<if test="nxOrdersDate != null">`nx_orders_date` = #{nxOrdersDate}, </if>
			<if test="nxOrdersStatus != null">`nx_orders_status` = #{nxOrdersStatus}, </if>
			<if test="nxOrdersService != null">`nx_orders_service` = #{nxOrdersService}, </if>
			<if test="nxOrdersServiceDate != null">`nx_orders_service_date` = #{nxOrdersServiceDate}, </if>
			<if test="nxOrdersServiceTime != null">`nx_orders_service_time` = #{nxOrdersServiceTime}, </if>
			<if test="nxOrdersWeighUserId != null">`nx_orders_weigh_user_id` = #{nxOrdersWeighUserId}, </if>
			<if test="nxOrdersSubAmount != null">`nx_orders_sub_amount` = #{nxOrdersSubAmount}, </if>
			<if test="nxOrdersSubFinished != null">`nx_orders_sub_finished` = #{nxOrdersSubFinished}, </if>
			<if test="nxOrdersPaymentStatus != null">`nx_orders_payment_status` = #{nxOrdersPaymentStatus}, </if>
			<if test="nxOrdersPaymentSendTime != null">`nx_orders_payment_send_time` = #{nxOrdersPaymentSendTime}, </if>
			<if test="nxOrdersPaymentTime != null">`nx_orders_payment_time` = #{nxOrdersPaymentTime}, </if>
			<if test="nxOrdersDeliveryUserId != null">`nx_orders_delivery_user_id` = #{nxOrdersDeliveryUserId}, </if>
            <if test="nxOrdersType != null">`nx_orders_type` = #{nxOrdersType}, </if>
            <if test="nxOrdersCommunityId != null">`nx_orders_community_id` = #{nxOrdersCommunityId}, </if>
            <if test="nxOrdersAmount != null">`nx_orders_amount` = #{nxOrdersAmount}</if>
		</set>
		where nx_orders_id = #{nxOrdersId}
	</update>
	
	<delete id="delete">
		delete from nx_orders where nx_orders_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nx_orders where nx_orders_id in 
		<foreach item="nxOrdersId" collection="array" open="(" separator="," close=")">
			#{nxOrdersId}
		</foreach>
	</delete>

</mapper>