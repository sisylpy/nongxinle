<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nongxinle.dao.NxDepartmentFatherGoodsDao">

	<select id="queryObject" resultType="com.nongxinle.entity.NxDepartmentFatherGoodsEntity">
		select * from nx_department_father_goods where nx_department_father_goods_id = #{value}
	</select>

	<select id="queryList" resultType="com.nongxinle.entity.NxDepartmentFatherGoodsEntity">
		select * from nx_department_father_goods 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nx_department_father_goods 
	</select>
	 
	<insert id="save" parameterType="com.nongxinle.entity.NxDepartmentFatherGoodsEntity">
		insert into nx_department_father_goods
		(
			`nx_department_father_goods_id`,
			`nx_dep_father_goods_name`,
			`nx_dep_father_goods_img`,
			`nx_dep_father_goods_sort`,
			`nx_dep_father_goods_color`,
			`nx_dep_fathers_father_id`,
			`nx_dep_father_goods_level`,
			`c`,
			`nx_DFG_goods_amount`
		)
		values
		(
			#{nxDepartmentFatherGoodsId},
			#{nxDepFatherGoodsName},
			#{nxDepFatherGoodsImg},
			#{nxDepFatherGoodsSort},
			#{nxDepFatherGoodsColor},
			#{nxDepFathersFatherId},
			#{nxDepFatherGoodsLevel},
			#{nxDfgDepartmentId},
			#{nxDfgGoodsAmount}
		)
	</insert>
	 
	<update id="update" parameterType="com.nongxinle.entity.NxDepartmentFatherGoodsEntity">
		update nx_department_father_goods 
		<set>
			<if test="nxDepFatherGoodsName != null">`nx_dep_father_goods_name` = #{nxDepFatherGoodsName}, </if>
			<if test="nxDepFatherGoodsImg != null">`nx_dep_father_goods_img` = #{nxDepFatherGoodsImg}, </if>
			<if test="nxDepFatherGoodsSort != null">`nx_dep_father_goods_sort` = #{nxDepFatherGoodsSort}, </if>
			<if test="nxDepFatherGoodsColor != null">`nx_dep_father_goods_color` = #{nxDepFatherGoodsColor}, </if>
			<if test="nxDepFathersFatherId != null">`nx_dep_fathers_father_id` = #{nxDepFathersFatherId}, </if>
			<if test="nxDepFatherGoodsLevel != null">`nx_dep_father_goods_level` = #{nxDepFatherGoodsLevel}, </if>
			<if test="nxDfgDepartmentId != null">`nx_DFG_department_id` = #{nxDfgDepartmentId}, </if>
			<if test="nxDfgGoodsAmount != null">`nx_DFG_goods_amount` = #{nxDfgGoodsAmount}</if>
		</set>
		where nx_community_father_goods_id = #{nxCommunityFatherGoodsId}
	</update>
	
	<delete id="delete">
		delete from nx_department_father_goods where nx_department_father_goods_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nx_department_father_goods where nx_department_father_goods_id in
		<foreach item="nxCommunityFatherGoodsId" collection="array" open="(" separator="," close=")">
			#{nxCommunityFatherGoodsId}
		</foreach>
	</delete>

</mapper>