<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nongxinle.dao.NxApplysDao">

	<select id="queryObject" resultType="com.nongxinle.entity.NxApplysEntity">
		select * from nx_applys where nx_applys_id = #{value}
	</select>

	<select id="queryList" resultType="com.nongxinle.entity.NxApplysEntity">
		select * from nx_applys 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nx_applys 
	</select>
	 
	<insert id="save" parameterType="com.nongxinle.entity.NxApplysEntity">
		insert into nx_applys
		(
			`nx_applys_id`, 
			`nx_apply_customer_id`, 
			`nx_apply_user_id`, 
			`nx_apply_distributer_id`, 
			`nx_apply_goods_id`, 
			`nx_apply_quantity`, 
			`nx_apply_date`, 
			`nx_apply_status`, 
			`nx_apply_remark`, 
			`nx_apply_weight`, 
			`nx_apply_price`, 
			`nx_apply_subtotal`, 
			`nx_weigh_user_id`, 
			`nx_account_user_id`, 
			`nx_bill_id`
		)
		values
		(
			#{nxApplysId}, 
			#{nxApplyCustomerId}, 
			#{nxApplyUserId}, 
			#{nxApplyDistributerId}, 
			#{nxApplyGoodsId}, 
			#{nxApplyQuantity}, 
			#{nxApplyDate}, 
			#{nxApplyStatus}, 
			#{nxApplyRemark}, 
			#{nxApplyWeight}, 
			#{nxApplyPrice}, 
			#{nxApplySubtotal}, 
			#{nxWeighUserId}, 
			#{nxAccountUserId}, 
			#{nxBillId}
		)
	</insert>
	 
	<update id="update" parameterType="com.nongxinle.entity.NxApplysEntity">
		update nx_applys 
		<set>
			<if test="nxApplyCustomerId != null">`nx_apply_customer_id` = #{nxApplyCustomerId}, </if>
			<if test="nxApplyUserId != null">`nx_apply_user_id` = #{nxApplyUserId}, </if>
			<if test="nxApplyDistributerId != null">`nx_apply_distributer_id` = #{nxApplyDistributerId}, </if>
			<if test="nxApplyGoodsId != null">`nx_apply_goods_id` = #{nxApplyGoodsId}, </if>
			<if test="nxApplyQuantity != null">`nx_apply_quantity` = #{nxApplyQuantity}, </if>
			<if test="nxApplyDate != null">`nx_apply_date` = #{nxApplyDate}, </if>
			<if test="nxApplyStatus != null">`nx_apply_status` = #{nxApplyStatus}, </if>
			<if test="nxApplyRemark != null">`nx_apply_remark` = #{nxApplyRemark}, </if>
			<if test="nxApplyWeight != null">`nx_apply_weight` = #{nxApplyWeight}, </if>
			<if test="nxApplyPrice != null">`nx_apply_price` = #{nxApplyPrice}, </if>
			<if test="nxApplySubtotal != null">`nx_apply_subtotal` = #{nxApplySubtotal}, </if>
			<if test="nxWeighUserId != null">`nx_weigh_user_id` = #{nxWeighUserId}, </if>
			<if test="nxAccountUserId != null">`nx_account_user_id` = #{nxAccountUserId}, </if>
			<if test="nxBillId != null">`nx_bill_id` = #{nxBillId}</if>
		</set>
		where nx_applys_id = #{nxApplysId}
	</update>
	
	<delete id="delete">
		delete from nx_applys where nx_applys_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nx_applys where nx_applys_id in 
		<foreach item="nxApplysId" collection="array" open="(" separator="," close=")">
			#{nxApplysId}
		</foreach>
	</delete>

</mapper>